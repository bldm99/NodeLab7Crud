<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud Peliculas</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/2811698395.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Prata&display=swap" rel="stylesheet">
</head>

<body>

    <section class="section-menu">
        <header>
            <%- include('./componentes/menu.ejs'); %>
        </header>
    </section>

    <section class="formularios">
        <h1>Usuarios</h1>
        <form action="/users" method="POST">
            <label for="name">Nombre:</label>
            <input type="text" id="name" name="name" required>
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" required>
            <label for="password">Contrase√±a:</label>
            <input type="password" id="password" name="password" required>
            <button type="submit">Crear Usuario</button>
        </form>
        <hr>
        <h2>Peliculas</h2>
       

    </section>



    <section class="registrar">
        Formuario de registros
        <div>
            <form action="/savePelicula" method="POST">
                <div class="ingresos">
                    <input type="text" name="nombre" placeholder="Nombre de pelicula" required />
                    <input type="text" name="director" placeholder="Director" required />
                    <input type="text" name="imagen" placeholder="Imagen" required />
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
        <hr>
    </section>
    

    <section class="caja-peliculas">
        <div class="contenedor-pe">

            <div class="titulop">
                <h2>Lista de usuarios</h2>
            </div>
            <div class="all-pelicula">
                <% usuario.forEach(function(x) { %>
                    <div class="pelicula">
                        <div class="unidad uni2">
                            <img class="contact" src="https://cdn-icons-png.flaticon.com/128/1177/1177568.png" alt="">

        
                            <h5>
                                <%= x.email%>
                            </h5>
                            <div class="acciones">
                                <a href="/usuario/<%= x._id %>" style="font-size: 20px;"><i
                                        class="fa-sharp fa-solid fa-pen-to-square"
                                        style="color: #ffffff; font-size: 35px;"></i></a>
                                <a href="/eliminarusu/<%= x._id %>" style="font-size: 20px;"><i
                                        class="fa-solid fa-trash-can" style="color: #ffffff; font-size: 35px;"></i></a>
                            </div>

                        </div>
                        <h5>
                            <%= x.name%>
                        </h5>
                    </div>
                    <% }); %>
            </div>

        </div>


    </section>

    

    <section class="caja-peliculas">
        <div class="contenedor-pe">

            <div class="titulop">
                <h2>Peliculas estreno Mayo 2023</h2>
            </div>
            <div class="all-pelicula">
                <% pelis.forEach(function(x) { %>
                    <div class="pelicula">
                        <div class="unidad">
                            <img src="<%= x.imagen %>" alt="">

                            <div class="estreno">
                                <h4>Fecha de Estreno 2023</h4>
                            </div>
                            <h5>
                                <%= x.director %>
                            </h5>
                            <div class="acciones">
                                <a href="/pelicula/<%= x._id %>" style="font-size: 20px;"><i
                                        class="fa-sharp fa-solid fa-pen-to-square"
                                        style="color: #ffffff; font-size: 35px;"></i></a>
                                <a href="/eliminar/<%= x._id %>" style="font-size: 20px;"><i
                                        class="fa-solid fa-trash-can" style="color: #ffffff; font-size: 35px;"></i></a>
                            </div>

                        </div>
                        <h5>
                            <%= x.nombre %>
                        </h5>
                    </div>
                    <% }); %>
            </div>

        </div>


    </section>


</body>

</html>